{
	"hosting":{
		"public":"dist",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites":[
			{
				"source":"**",
				"destination":"/index.html"
			}
		],
		"headers": [
			{
				"source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
				"headers" : [ {
				  "key" : "Access-Control-Allow-Origin",
				  "value" : "*"
				} ]
			  },
			{
			  "source": "**/*.@(js|css)",
			  "headers": [
				{
				  "key": "Cache-Control",
				  "value": "max-age=31536000"
				}
			  ]
			},
			{
			  "source": "**/*.@(png|jpg|jpeg|gif|svg|ico)",
			  "headers": [
				{
				  "key": "Cache-Control",
				  "value": "max-age=31536000"
				}
			  ]
			}
		  ]  

	}
}